<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".view.activity.MenuActivity">
    <LinearLayout
        android:id="@+id/container_logo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            app:srcCompat="@drawable/logo_big" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="@string/menu_headline"
                android:textAlignment="gravity"
                android:textColor="@color/textColorBright"
                android:textSize="@dimen/header_menu_size"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_search"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            app:srcCompat="@drawable/ic_search_24dp" />
    </LinearLayout>


    <android.support.v7.widget.CardView
        style="@style/MenuCardTheme"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:id="@+id/container_places"
            style="@style/MenuContentTheme"
            android:background="@drawable/place_holder">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_place_96" />

            <TextView
                style="@style/MenuTextTheme"
                android:text="@string/places" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/MenuCardTheme"
        app:cardCornerRadius="16dp">
    <LinearLayout
        android:id="@+id/container_persons"
        style="@style/MenuContentTheme"
        android:background="@drawable/place_holder">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_perm_96dp" />

        <TextView
            style="@style/MenuTextTheme"
            android:text="@string/persons"
             />
    </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/MenuCardTheme"
        app:cardCornerRadius="16dp">
    <LinearLayout
        android:id="@+id/container_routes"
        style="@style/MenuContentTheme"
        android:background="@drawable/place_holder"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_map_96" />

        <TextView
            style="@style/MenuTextTheme"
            android:text="@string/routes"
             />
    </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/MenuCardTheme"
        app:cardCornerRadius="16dp">
        <LinearLayout
            android:id="@+id/container_info"
            style="@style/MenuContentTheme"
            android:background="@drawable/place_holder"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_info_outline_96dp" />

            <TextView
                style="@style/MenuTextTheme"
                android:text="@string/info"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>