<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.selfapps.dok">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/logo_100"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_100"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.activity.MainActivity"
            android:label="@string/menu_headline"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activity.SplashActivity"
            android:label="@string/title_app"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.PersonDetailActivity"
            android:label="@string/menu_headline"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activity.AdditionalActivity"
            android:label="@string/menu_headline" />
        <activity
            android:name=".view.activity.FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/menu_headline"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".view.activity.PlaceDetailActivity"
            android:label="@string/menu_headline"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activity.RoutesDetailActivity"
            android:label="@string/menu_headline"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activity.MenuActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".view.activity.SearchActivity">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".view.activity.AboutUsActivity" />
    </application>

</manifest>